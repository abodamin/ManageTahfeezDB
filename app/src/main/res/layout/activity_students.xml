<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_students"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.amin.abod.halaqa.students">

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true">

        <Button
            android:text="اضافة طالب"
            android:layout_width="363dp"
            android:layout_height="wrap_content"
            tools:layout_editor_absoluteY="39dp"
            tools:layout_editor_absoluteX="8dp"
            android:id="@+id/btnAddStudent"
            android:textStyle="normal|bold"
            android:textSize="24sp"
            android:textAlignment="center" />

        <Button
            android:text="عرض طالب"
            android:layout_width="363dp"
            android:layout_height="wrap_content"
            tools:layout_editor_absoluteY="116dp"
            tools:layout_editor_absoluteX="8dp"
            android:id="@+id/btnViewStudent"
            android:textStyle="normal|bold"
            android:textSize="24sp"
            android:textAlignment="center" />

        <Button
            android:text="متابعة الحفظ"
            android:layout_width="363dp"
            android:layout_height="wrap_content"
            tools:layout_editor_absoluteY="204dp"
            tools:layout_editor_absoluteX="8dp"
            android:id="@+id/btnHifz"
            android:textStyle="normal|bold"
            android:textSize="24sp"
            android:textAlignment="center" />

        <Button
            android:text="تعديل طالب"
            android:layout_width="363dp"
            android:layout_height="wrap_content"
            tools:layout_editor_absoluteY="292dp"
            tools:layout_editor_absoluteX="8dp"
            android:id="@+id/btnUpdateStudent"
            android:textStyle="normal|bold"
            android:textSize="24sp"
            android:textAlignment="center" />

    </android.support.constraint.ConstraintLayout>
</RelativeLayout>
